<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dezurka" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dezurka_red</item>
        <item name="colorPrimaryVariant">@color/dezurka_orange</item>
        <item name="colorOnPrimary">@color/dezurka_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dezurka_blue</item>
        <item name="colorSecondaryVariant">@color/dezurka_grey</item>
        <item name="colorOnSecondary">@color/dezurka_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/dezurka_blue</item>
        <item name="android:fontFamily">@font/creatodisplay_regular</item>
    </style>
    <style name="Theme.Dezurka.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Dezurka.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Dezurka.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>