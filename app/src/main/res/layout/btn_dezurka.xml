<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dezurka_btn"
    android:layout_width="@dimen/dezurka_btn_width"
    android:layout_height="@dimen/dezurka_btn_height"
    android:background="@drawable/dezurka_button"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fontFamily="@font/creatodisplay_medium"
        android:text="First text"
        android:textColor="@color/dezurka_white"
        android:textSize="20dp"
        android:gravity="center"
        android:foregroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>