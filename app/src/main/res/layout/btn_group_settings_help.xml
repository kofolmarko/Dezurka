<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/settings_btn_1"
        layout="@layout/btn_settings"
        android:layout_width="@dimen/dashboard_btn_width"
        android:layout_height="@dimen/settings_btn_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <include
        android:id="@+id/settings_btn_2"
        layout="@layout/btn_settings"
        android:layout_width="@dimen/dashboard_btn_width"
        android:layout_height="@dimen/settings_btn_height"
        app:layout_constraintEnd_toEndOf="@+id/settings_btn_1"
        app:layout_constraintStart_toStartOf="@+id/settings_btn_1"
        app:layout_constraintTop_toBottomOf="@+id/settings_btn_1"
        android:layout_marginTop="30dp"/>

    <include
        android:id="@+id/settings_btn_3"
        layout="@layout/btn_settings"
        android:layout_width="@dimen/dashboard_btn_width"
        android:layout_height="@dimen/settings_btn_height"
        app:layout_constraintEnd_toEndOf="@+id/settings_btn_2"
        app:layout_constraintStart_toStartOf="@+id/settings_btn_2"
        app:layout_constraintTop_toBottomOf="@+id/settings_btn_2"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>