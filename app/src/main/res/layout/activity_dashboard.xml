<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/Theme.Dezurka.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/top_navigation"
            app:popupTheme="@style/Theme.Dezurka.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_dashboard"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hamburger_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/hamburger_menu_margin"
        android:layout_marginBottom="@dimen/hamburger_menu_margin"
        android:src="@drawable/hamburger_menu_btn"
        app:tint="@null"
        app:maxImageSize="@dimen/hamburger_menu_dim"
        android:background="@null" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>