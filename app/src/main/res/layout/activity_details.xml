<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MyDateDetailsActivity">

  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar" />

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical"
      android:translationY="-200dp"
      app:layout_constraintBottom_toBottomOf="@+id/include7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/include7"
      app:layout_constraintTop_toBottomOf="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="20dp"
          android:src="@drawable/icon_calendar" />

      <TextView
          android:id="@+id/text_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="#FFFFFF"
          android:textSize="30dp"
          android:fontFamily="@font/creatodisplay_regular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="20dp"
          android:src="@drawable/icon_awesome_clock" />

      <TextView
          android:id="@+id/text_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="#FFFFFF"
          android:textSize="30dp"
          android:fontFamily="@font/creatodisplay_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="20dp"
          android:src="@drawable/icon_user_empty" />

      <TextView
          android:id="@+id/text_person"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="#FFFFFF"
          android:textSize="25dp"
          android:fontFamily="@font/creatodisplay_thin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="20dp"
          android:src="@drawable/icon_home" />

      <TextView
          android:id="@+id/text_house"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="#FFFFFF"
          android:textSize="25dp"
          android:fontFamily="@font/creatodisplay_thin"/>
    </LinearLayout>

  </LinearLayout>

  <include
      android:id="@+id/btn_trade"
      layout="@layout/btn_dezurka"
      android:layout_width="@dimen/dezurka_btn_width"
      android:layout_height="@dimen/dezurka_btn_height"
      app:layout_constraintTop_toBottomOf="@id/linearLayout2"
      app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="@+id/linearLayout2" />

  <include
      android:id="@+id/include7"
      layout="@layout/hamburger_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>